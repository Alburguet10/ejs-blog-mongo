<%- include ("./partials/_header") %>

<h1>Are you sure you want to delete this post?</h1>
<main role="main" class="container">
    <div class="row">
      <div class="col-md-8 blog-main">
        
        <form action="/delete/<%= posts._id %>" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="title" placeholder="Title" value="<%= posts.title %>">
          </div>
          <div class="form-group">
            <input type="text" name="author" class="form-control" placeholder="Author" value="<%= posts.author %>">
          </div>
          <div class="form-group">
            <textarea class="form-control" name="post_data" cols="100" rows="10"><%= posts.post_data %></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Delete</button>
        </form>
      </div>
    </div>
  </main>

<%- include ("./partials/_footer") %>